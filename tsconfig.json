{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.AsyncIterable"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "isolatedDeclarations": true
  },
  "include": ["./src/**/*"]
}
