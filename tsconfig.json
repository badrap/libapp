{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*"]
}
