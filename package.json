{
  "name": "@badrap/libapp",
  "type": "commonjs",
  "version": "0.8.1",
  "description": "TypeScript helpers for creating Badrap apps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badrap/libapp.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "exports": {
    "./api": "./dist/api/index.js",
    "./ui": "./dist/ui/index.js",
    "./ui/experimental": "./dist/ui/experimental/index.js",
    "./jsx-runtime": "./dist/jsx-runtime.js",
    "./jsx-dev-runtime": "./dist/jsx-dev-runtime.js"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist/* && tsc",
    "prepack": "npm run build",
    "changeset": "changeset",
    "bump": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "author": "Joachim Viide <jviide@iki.fi>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/badrap/libapp/issues"
  },
  "homepage": "https://github.com/badrap/libapp#readme",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@badrap/valita": "^0.4.5"
  }
}
